<h2 class="fs-4">Editar categoria:</h2>
<section class="card">
    <div class="card-body">
        <form action="/admin/categories/edit" method="post">
            <input type="hidden" name="id" value="{{categories._id}}">
            <label for="name">Nome: </label>
            <input type="text" id="name" name="name" minlength="2" maxlength="50" placeholder="Nome da categoria" class="form-control" value="{{categories.name}}" required>
            <label for="slug">Slug: </label>
            <input type="text" id="slug" name="slug" minlength="2" maxlength="45" placeholder="Slug da categoria" class="form-control" value="{{categories.slug}}" required> 
            <br>
            <button type="submit" class="btn btn-success">Salvar alterações</button>
        </form>
        <a href="../"><button class="btn btn-secondary mt-2">Cancelar</button></a>
    </div>
</section>